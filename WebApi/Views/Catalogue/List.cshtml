@{
	ViewData["Title"] = "Home Page";
}

@model WebApi.Models.CatalogueViewModel;

<div class="list-group">
	@foreach (var item in Model.Items)
	{
		<div href="#" class="list-group-item-action list-group-item" style="padding: 2px">
			<div class="list-group list-group-horizontal" style="padding: 2px">
				<img class="img-thumbnail" width="350" height="300" src="@item.ImgUrl" />
				<div class="list-group" style="margin-left: 5px; width: 40%">
					<h3>@item.Name</h3>
					<p>@item.Description</p>
					<button type="button" class="btn btn-light btn-circle btn-md" onclick="addToOrder(@item.Id)" style="
						 margin-top: 90%;
						margin-left: 110%;">
						🛒
					</button>
				</div>
			</div>
		</div>
	}
</div>

<form asp-controller="Order" asp-action="Create" method="post" class="card order-card">
	<input type="hidden" asp-for="@Model.UserId" />
	<div class="list-group list-group-horizontal">
		<input type="submit" class="btn btn-info btn-md" value="Checkout" />
		<h4>🛒</h4>
		<h4 name="itemsCount"></h4>
	</div>
	<div href="#" class="list-group-item-action list-group-item" style="padding: 2px;margin:5px;margin-left:0px;">
		<div class="list-group list-group-horizontal" style="height:65px;">
			<img class="img-thumbnail" width="80" height="65" src="" />
			<h5></h5>
			<button type="button" class="btn btn-danger btn-sm" onclick="">🞩</button>
		</div>
	</div>
</form>